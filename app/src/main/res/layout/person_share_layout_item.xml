<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CustomAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/alert_shape"
    android:orientation="horizontal"
    android:padding="10dp" >

    <com.demo.app.view.CustomeImageTextButton
        android:id="@+id/wxshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CustomAttrs:src = "@drawable/wechat"
        android:layout_margin="20dp"
        CustomAttrs:text="微信朋友圈" />

    <com.demo.app.view.CustomeImageTextButton
        android:id="@+id/wbshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CustomAttrs:src = "@drawable/weibo"
        android:layout_margin="20dp"
        CustomAttrs:text="新浪微博" />

    <com.demo.app.view.CustomeImageTextButton
        android:id="@+id/qqshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CustomAttrs:src = "@drawable/qq"
        android:layout_margin="20dp"
        CustomAttrs:text="QQ好友" />

</LinearLayout>