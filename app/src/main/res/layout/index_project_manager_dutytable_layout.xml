            <com.demo.app.view.CustomeEditText2
                android:id="@+id/pm_duty_shixiperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/pr_new_dnum_hint"
                CustomAttrs:button_text=""
                CustomAttrs:show_Button="true"
                android:tag="pm_duty_shixiperson"
                CustomAttrs:t_text2="@string/pm_duty_shixiperson" />
            
			<com.demo.app.view.CustomeEditText2
                android:id="@+id/pm_duty_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:button_text=""
                CustomAttrs:show_Button="true"
                android:tag="pm_duty_group"
                CustomAttrs:chint2="@string/pr_new_dnum_hint"
                CustomAttrs:t_text2="@string/pm_duty_group" />
			
            <com.demo.app.view.CustomeEditText2
                android:id="@+id/pm_duty_dutytime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/pr_new_dnum_hint"
                CustomAttrs:show_image_date="true"
                CustomAttrs:t_text2="@string/pm_duty_dutytime" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/pm_duty_start_dutytime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/pr_new_dnum_hint"
                CustomAttrs:show_image_date="true"
                CustomAttrs:t_text2="@string/pm_duty_start_dutytime" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/pm_duty_end_dutytime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/pr_new_dnum_hint"
                CustomAttrs:show_image_date="true"
                CustomAttrs:t_text2="@string/pm_duty_end_dutytime" />

