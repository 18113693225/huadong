            <com.demo.app.view.CustomeEditText2
                android:id="@+id/pm_duty_classname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/pr_new_dnum_hint"
                CustomAttrs:t_text2="@string/pm_duty_classname" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/pm_duty_dutyfz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/pr_new_dnum_hint"
                CustomAttrs:button_text=""
                CustomAttrs:show_Button="true"
                android:tag="pm_duty_dutyfz"
                CustomAttrs:t_text2="@string/pm_duty_dutyfz" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/pm_duty_zhuduty"
