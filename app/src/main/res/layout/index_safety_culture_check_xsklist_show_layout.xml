<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CustomAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <include layout="@layout/common_gps_title" />

            <com.demo.app.view.CustomeTextView
                android:id="@+id/sc_check_show_pname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:name_text="@string/pr_new_pname" />

            <com.demo.app.view.CustomeTextView
                android:id="@+id/sc_check_show_ptype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:name_text="@string/pr_new_ptype" />

            <com.demo.app.view.CustomeTextView
                android:id="@+id/sc_check_show_runit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:name_text="@string/pr_new_runit" />

            <com.demo.app.view.CustomeTextView
                android:id="@+id/sc_check_show_xsr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:name_text="@string/pr_new_xsr" />

            <com.demo.app.view.CustomeTextView
                android:id="@+id/sc_check_show_safetyselect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                CustomAttrs:name_text="@string/sc_check_safetyselect" />

            <LinearLayout
                android:id="@+id/common_sc_check_xsk_show_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/edit_sc_check_tables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_franchise_shape"
                    android:drawableLeft="@drawable/icon_reedit"
                    android:text="重新编辑"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/delete_sc_check_tables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_franchise_shape1"
                    android:drawableLeft="@drawable/icon_del"
                    android:text="删除表单"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>