    <com.demo.app.view.CustomeEditText2
        android:id="@+id/pf_dqjx_workfzr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        CustomAttrs:chint2="@string/pr_new_dnum_hint"
        CustomAttrs:show_image="true"
        CustomAttrs:t_text2="@string/pf_dqjx_workfzr"
        android:tag="pf_dqjx_workfzr" />

    <EditText
        android:id="@+id/pf_dqjx_xsbz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/icon_rounded_rectangle"
        android:gravity="top"
        android:hint="@string/pf_dqjx_jxresult"
