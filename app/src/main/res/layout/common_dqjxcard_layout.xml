    xmlns:CustomAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:tag="common_dqjxcard"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.demo.app.view.CustomeTextView
        android:id="@+id/pf_dqjx_starttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:tag="pf_dqjx_starttime"
        CustomAttrs:drawable_l_text="@drawable/icon_time"
        CustomAttrs:name_text="工作开始时间：" />

    <com.demo.app.view.CustomeEditText2
        android:id="@+id/pf_dqjx_worknum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        CustomAttrs:chint2="@string/pr_new_dnum_hint"
        CustomAttrs:t_text2="@string/pf_dqjx_jxContent"
        android:tag="pf_dqjx_worknum" />

    <com.demo.app.view.CustomeEditText2
        android:id="@+id/pf_dqjx_jxtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        CustomAttrs:chint2="@string/pr_new_dnum_hint"
        CustomAttrs:show_image="true"
        CustomAttrs:t_text2="@string/pf_dqjx_jxtype"
        android:tag="pf_dqjx_jxtype" />

    <com.demo.app.view.CustomeEditText2
        android:id="@+id/pf_dqjx_workendtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        CustomAttrs:chint2="@string/pr_new_dnum_hint"
        CustomAttrs:show_image_date="true"
        CustomAttrs:t_text2="@string/pf_dqjx_workendtime"
        android:tag="pf_dqjx_workendtime" />

