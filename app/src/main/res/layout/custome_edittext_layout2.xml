<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_rounded_rectangle"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/custome_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:text="测试"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/custome_editorText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:textColorHint="@color/text_input_color"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/custome_imageView2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:src="@drawable/icon_rechoose"
            android:visibility="gone" >
        </ImageView>

        <Button
            android:id="@+id/custome_button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/login_bg"
            android:drawableRight="@drawable/icon_arrow_right"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:text="选择类别"
            android:visibility="gone" />
        <TextView
            android:id="@+id/custome_textViewUnit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:text="℃"
            android:visibility="gone"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>