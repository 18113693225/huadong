<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CustomAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <include layout="@layout/common_gps_title" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_pName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:show_image="true"
                CustomAttrs:t_text2="@string/tt_w_new_pname" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_runit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:readonly = "true"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:t_text2="@string/tt_w_new_runit" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_rPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:readonly = "true"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:t_text2="@string/tt_w_new_rperson" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_pnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:t_text2="@string/tt_w_new_num" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_workNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:t_text2="@string/tt_w_new_worknum" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_workName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:show_image="true"
                CustomAttrs:t_text2="@string/tt_w_new_workname" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_workFzr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:show_image="true"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:t_text2="@string/tt_w_new_fzr" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_workQfr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:show_image="true"
                CustomAttrs:t_text2="@string/tt_w_new_qfz" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_workStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:show_image_date="true"
                CustomAttrs:t_text2="@string/tt_w_new_start" />

            <com.demo.app.view.CustomeEditText2
                android:id="@+id/work_new_workEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                CustomAttrs:chint2="@string/tt_new_hint"
                CustomAttrs:show_image_date="true"
                CustomAttrs:t_text2="@string/tt_w_new_end" />

            <Button
                android:id="@+id/work_new_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_exit_shape"
                android:text="确认保存" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/table_end"
                android:text="@string/tt_w_new_bottom" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>